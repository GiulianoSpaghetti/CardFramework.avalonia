<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <Title>CardFramework.avalonia</Title>
    <Description>Un framework per la costruzione di giochi di carte in avalonia</Description>
    <Copyright>2024 Giulio Sorrentino</Copyright>
    <PackageProjectUrl>https://github.com/numerunix/CardFramework.avalonia/blob/master/README.md</PackageProjectUrl>
    <PackageIcon>Icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>cardgame</PackageTags>
    <PackageReleaseNotes>Release iniziale</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/numerunix/CardFramework.avalonia</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\CBriscola-Demo\CBriscola-Demo.Android\Icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.0.9" />
  </ItemGroup>

</Project>
